package june0629;

public class point3 {
	public double x;
	public double y;
	public double z;
	public point3(int x, int  y, int z) {
		this.x = x;
		this.y = y;
		this.z = z;
	}
	public point3(double x, double y, double z) {
		this.x = x;
		this.y = y;
		this.z = z;
	}
	
	
	
	public double distance() { // 원점으로부터의 거리
		return Math.sqrt(x*x + y*y + z*z);
	}
}
